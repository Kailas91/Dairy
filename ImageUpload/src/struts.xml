<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="default" extends="struts-default" namespace="/">
        <action name="fileUpload" class="com.uks.kailas.day4.action.FileUploadAction">
            <interceptor-ref name="fileUpload">
                <param name="maximumSize">1048576</param>
                <param name="allowedTypes">
                    image/png,image/gif,image/jpeg,image/pjpeg
        		</param>

            </interceptor-ref>
            <interceptor-ref name="defaultStack"></interceptor-ref>
            <result name="success">/day4/uploadSucceed.jsp</result>
			<result name="error">/day4/fileUpload.jsp</result>
            <result name="input">/day4/fileUpload.jsp</result>
        </action>
    </package>
</struts>